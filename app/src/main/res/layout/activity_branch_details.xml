<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BranchDetails"
    android:background="@drawable/gradient_background"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBranch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3BB9FF"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/toolbarText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:text="ToolBar"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="18dp">

        </TextView>


    </androidx.appcompat.widget.Toolbar>


    <ListView
        android:id="@+id/OurListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:foregroundGravity="center"
        android:listSelector="@drawable/listview_colours"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:dividerHeight="5.0sp"
        android:divider="@drawable/gradient_background"
        android:background="@color/secondaryWhite"
        android:textStyle="bold"
        android:textColor="#000000"

        />


</androidx.constraintlayout.widget.ConstraintLayout>